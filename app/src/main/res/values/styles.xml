<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sf_compact</item>
        <item name="night_statusBarColor">#000000</item>
        <item name="android:background">#FAFAFA</item>
        <item name="night_background">#000000</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_width">74dp</item>
        <item name="android:textSize">36sp</item>

    </style>

    <style name="BlueButton" parent="Button">
        <item name="android:background">@drawable/oval_button_light</item>
        <item name="android:textColor">#64B5F6</item>
        <item name="night_background">@drawable/adark_btn</item>
        <item name ="night_textColor">#9D4B08</item>
    </style>
    
    <style name="DarkBlueButton" parent="Button">
        <item name="android:background">@drawable/oval_button_blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="night_background">@drawable/org_btn</item>
        <item name ="night_textColor">#000000</item>
    </style>
    <style name="GreyButton" parent="Button">
        <item name="android:background">@drawable/oval_grey_button</item>
        <item name="android:textColor">#263238</item>
        <item name="night_background">@drawable/dark_btn</item>
        <item name ="night_textColor">#E0E0E0</item>
    </style>

    <style name="LinearForNum">
        <item name="android:background">@drawable/oval_linear_grey</item>
        <item name="night_background">@drawable/dark_linear</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearForNumO">
        <item name="android:background">@drawable/oval_linear_grey</item>
        <item name="night_background">@drawable/dark_linear</item>
        <item name="android:orientation">vertical</item>


    </style>

    <style name="LinearBrown">
        <item name = "android:background">@drawable/oval_linear_light</item>
        <item name="night_background">@drawable/brown_linear</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="OrangeLinear">
        <item name="android:background">@drawable/oval_linear_light_blue</item>
        <item name="night_background">@drawable/orng_linear</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name = "ImageViewStyle">
        <item name = "android:src">@drawable/ic_luna</item>
        <item name="night_src">@drawable/ic_sun</item>
    </style>

    <style name="TextViewStyle">
        <item name = "android:gravity">right|center_vertical</item>
        <item name ="android:textAlignment">gravity</item>
        <item name="android:textColor">#263238</item>
        <item name="night_textColor">#E0E0E0</item>
    </style>
</resources>
